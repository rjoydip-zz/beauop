{
  "name": "beauop",
  "version": "1.0.0",
  "license": "ISC",
  "title": "Automatic event blog publisher",
  "scripts": {
    "lint": "tsc",
    "dev": "next",
    "build": "yarn build-css && next build",
    "start": "next start",
    "clean-cache": "rm -rf .next .vercel *.lock index.css node_modules/.cache",
    "build-css": "postcss tailwind.css -o index.css",
    "build-css-prod": "cross-env NODE_ENV=production postcss tailwind.css -o index.css",
    "watch-css": "postcss tailwind.css -o index.css -w",
    "all": "yarn clean-cache && yarn lint && yarn build"
  },
  "dependencies": {
    "dayjs": "^1.8.30",
    "next": "latest",
    "preact": "^10.4.1",
    "preact-render-to-string": "^5.1.6",
    "promise-hook": "^0.1.4",
    "react": "github:preact-compat/react#1.0.0",
    "react-dom": "github:preact-compat/react-dom#1.0.0",
    "react-icons": "^3.10.0",
    "react-ssr-prepass": "npm:preact-ssr-prepass@^1.0.1",
    "styled-components": "^5.1.0",
    "tailwindcss": "^1.4.1"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "@types/node": "^13.13.4",
    "@types/styled-components": "5.0.1",
    "autoprefixer": "^9.7.6",
    "babel-plugin-styled-components": "^1.10.0",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "husky": "^4.2.5",
    "next-compose-plugins": "^2.2.0",
    "postcss-cli": "^7.1.1",
    "typescript": "3.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn all"
    }
  }
}
